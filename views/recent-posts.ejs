<% include("./partials/head") %>

<body>
    <h1>Recent Posts</h1>

    <a href="/">Go home</a>

    <% if (posts.length > 0) { %>

        <% for (let post of posts) { %>
            <div class="post">
                <h2><%= post.title %></h2>
                <p><%= post.message %></p>
                <p>Written by: <%= post.author %></p>
            </div>
        <% } %>

    <% } else { %>

        <p>No posts found</p>

    <% } %>

</body>

<% include("./partials/foot") %>