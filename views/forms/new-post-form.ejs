<%- include("../partials/head") %>

<body>
<div class="site-container d-flex h-100 mx-auto flex-column">
    <%- include("../partials/header") %>
    <main class="inner">
        <form class="form-post" action="/posts/new" method="POST">
            <h1 class="form-title">Create Post</h1>
            
            <div class="d-flex flex-row align-items-center mb-4 control-wrapper">
                <input type="text" name="title" id="title" class="form-control" placeholder="Title" autofocus/>
                <label class="sr-only" for="title">Title </label>
            </div>

            <div class="d-flex flex-row align-items-center mb-4 control-wrapper">
                <div class="form-outline flex-fill mb-0">
                    <textarea type="text" name="content" id="content" class="form-control" placeholder="Message" required></textarea>
                    <label class="sr-only" for="content">Content: </label>
                </div>
            </div>

            <div class="d-flex flex-row align-items-center mb-4">
                <div class="form-outline flex-fill mb-0">
                    <button type="submit" class="btn btn-primary" style="margin-right: 20px;">Publish</button>
                    <a href="/" class="btn btn-primary">Cancel</a>
                </div>
            </div>
            
        </form>
    </main>
    <%- include("../partials/foot") %>
</div>
</body>