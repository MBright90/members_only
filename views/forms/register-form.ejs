<div class="welcome-container d-flex h-100 p-3 mx-auto flex-column">
    <main>
    
    <h1>Register</h1>
    <form class="form-register mx-1 mx-md-4">
    
        <div class="d-flex flex-row align-items-center mb-4">
          <i class="fas fa-user fa-lg me-3 fa-fw"></i>
          <div class="form-outline flex-fill mb-0">
            <input type="text" id="username" name="username" class="form-control" placeholder="Name" required autofocus />
            <label class="sr-only" for="username">Your Username</label>
          </div>
        </div>
    
        <div class="d-flex flex-row align-items-center mb-4">
          <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
          <div data-mdb-input-init class="form-outline flex-fill mb-0">
            <input type="email" id="email" name="email" class="form-control" placeholder="Email" required />
            <label class="sr-only" for="email">Your Email</label>
          </div>
        </div>
    
        <div class="d-flex flex-row align-items-center mb-4">
          <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
          <div data-mdb-input-init class="form-outline flex-fill mb-0">
            <input type="password" id="password" name="password" class="form-control" placeholder="Password" required />
            <label class="sr-only" for="password">Password</label>
          </div>
        </div>
    
        <div class="d-flex flex-row align-items-center mb-4">
          <i class="fas fa-key fa-lg me-3 fa-fw"></i>
          <div data-mdb-input-init class="form-outline flex-fill mb-0">
            <input type="text" id="password-repeat" name="passwordRepeat" class="form-control" placeholder="Repeat Password" required />
            <label class="sr-only" for="password-repeat">Repeat your password</label>
          </div>
        </div>
    
        <div class="form-check d-flex justify-content-center mb-5">
          <input class="form-check-input me-2" type="checkbox" name="terms-agreement" value="" id="terms-agreement" />
          <label class="form-check-label" for="terms-agreement">
            Example agreement with statements in <a href="#!">Terms of service</a>
          </label>
        </div>

        <button  type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg">Register</button>
    
      </form>
    </main>
</div>


